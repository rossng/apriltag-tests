{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/apriltag-tests/detection-format.schema.json",
  "title": "AprilTag Detection Result Format",
  "description": "Standard format for AprilTag detection results from detector programs",
  "type": "object",
  "required": ["image", "detections"],
  "properties": {
    "image": {
      "type": "string",
      "description": "Filename of the source image (without path)"
    },
    "detections": {
      "type": "array",
      "description": "Array of detected AprilTags in the image",
      "items": {
        "type": "object",
        "required": ["tag_id", "tag_family", "corners"],
        "properties": {
          "tag_id": {
            "type": "integer",
            "description": "Numeric ID of the detected tag",
            "minimum": 0
          },
          "tag_family": {
            "type": "string",
            "description": "Family name of the tag (e.g., 'tag36h11', 'tag25h9', 'tag16h5')"
          },
          "corners": {
            "type": "array",
            "description": "Four corner positions in pixel coordinates, ordered counter-clockwise starting from bottom-left",
            "minItems": 4,
            "maxItems": 4,
            "items": {
              "type": "object",
              "required": ["x", "y"],
              "properties": {
                "x": {
                  "type": "number",
                  "description": "X coordinate in pixels"
                },
                "y": {
                  "type": "number",
                  "description": "Y coordinate in pixels"
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
